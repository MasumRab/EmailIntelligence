[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    node_modules,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov,
    .tox,
    .hypothesis,
    .env,
    .env.*,
    *.egg-info,
    temp-backup,
    worktrees
per-file-ignores =
    __init__.py: F401
    tests/*: F401, F811

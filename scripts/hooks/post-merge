#!/bin/sh
command -v git-lfs >/dev/null 2>&1 || { echo >&2 "
This repository is configured for Git LFS but 'git-lfs' was not found on your path. If you no longer wish to use Git LFS, remove this hook by deleting the 'post-merge' file in the hooks directory (set by 'core.hookspath'; usually '.git/hooks').
"; exit 2; }
git lfs post-merge "$@"

# Regenerate branch-specific documentation after merge
BRANCH=$(git rev-parse --abbrev-ref HEAD)
if [[ "$BRANCH" == "main" || "$BRANCH" == "scientific" ]]; then
    echo "Regenerating documentation for $BRANCH branch after merge..."
    if command -v python3 &> /dev/null;
    then
        python3 scripts/docs_branch_versioning.py --branch "$BRANCH"
    fi
fi